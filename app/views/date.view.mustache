<div class="govuk-form-group" id="id-section-{{id}}">
  {{#readOnly}}
    <p class="govuk-fieldset__legend govuk-fieldset__legend--s text">
      {{label}}
    </p>
    <p id="{{id}}-hint" class="govuk-hint text">
      {{#hint}}{{hint}}{{/hint}}
    </p>
    <p class="govuk-body text" id="{{id}}" data-name="{{id}}">{{#value}}{{day}}/{{month}}/{{year}}{{/value}}</p>
  {{/readOnly}}
  {{^readOnly}}
    <fieldset class="govuk-fieldset" aria-describedby="{{id}}-hint" role="group">
      <legend class="govuk-fieldset__legend govuk-fieldset__legend--m text">
        {{label}}
      </legend>        
      <span id="{{id}}-hint" class="govuk-hint text">
        {{#hint}}{{hint}}{{/hint}}
      </span>
      <div class="form-date govuk-date-input" data-id="{{id}}"> 
        <div class="form-group form-group-day govuk-date-input__item">
          <label for="{{id}}.day" class="govuk-label govuk-date-input__label">
            Day
          </label>
          <input type="tel" 
                 class="day form-control govuk-input govuk-date-input__input govuk-input--width-2" 
                 maxlength="2" id="{{id}}.day"
                 name="{{id}}" 
                 value="{{day}}"
                 data-type="day"
                 aria-describedby="{{id}}-hint" />
        </div>
        <div class="form-group form-group-month govuk-date-input__item">
          <label for="{{id}}.month" class="govuk-label govuk-date-input__label">
            Month
          </label>
          <input type="tel" 
                 class="month form-control govuk-input govuk-date-input__input govuk-input--width-2" 
                 maxlength="2" id="{{id}}.month"
                 name="{{id}}" 
                 value="{{month}}"
                 data-type="month"
                 aria-describedby="{{id}}-hint" />
        </div>
        <div class="form-group form-group-year govuk-date-input__item">
          <label for="{{id}}.year" class="govuk-label govuk-date-input__label">
            Year
          </label>
          <input type="tel" 
                 class="year form-control govuk-input govuk-date-input__input govuk-input--width-4" 
                 maxlength="4" id="{{id}}.year"
                 name="{{id}}" 
                 value="{{year}}"
                 data-type="year"
                 aria-describedby="{{id}}-hint" />
        </div>
        <div class="date-picker date-picker__text-date govuk-date-input__item">
          <div class="date-picker__controls hidden">
            <label for="date-picker-{{id}}" class="visuallyhidden">Date Picker</label>
            <input type="text" id="date-picker-{{id}}" aria-label="Open date picker" class="date-picker-input" name="date-picker-{{id}}">
            <button type="button" class="link-style date-picker__button--toggle govuk-body" name="Select date">Select date
              <svg version="1.1" xmlns="http://www.w3.org/2000/svg" focusable="false" width="20" height="22" viewBox="0 0 26 28" class="date-picker__calendar-icon">
                <title>calendar</title>
